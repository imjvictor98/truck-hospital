<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:contentPadding="16dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="1dp"
    app:strokeColor="#F0F0F0"
    app:cardElevation="2dp"
    android:background="?attr/selectableItemBackground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_list_order_avatar_card"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/yellow_100"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/item_list_order_avatar_image"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_money"
                />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/item_list_order_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/simplon_bp_bold"
            android:text="Bem-vindo de volta"
            android:textColor="#4A4E51"
            android:textSize="14sp"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toStartOf="@+id/item_list_order_total"
            app:layout_constraintStart_toEndOf="@+id/item_list_order_avatar_card"
            app:layout_constraintTop_toTopOf="@+id/item_list_order_avatar_card" />

        <TextView
            android:id="@+id/item_list_order_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="24dp"
            android:fontFamily="@font/simplon_bp_regular"
            android:text="Bem-vindo de volta"
            android:textColor="#6A6D73"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="@+id/item_list_order_avatar_card"
            app:layout_constraintEnd_toStartOf="@+id/item_list_order_total"
            app:layout_constraintStart_toEndOf="@+id/item_list_order_avatar_card"
            app:layout_constraintTop_toBottomOf="@+id/item_list_order_title" />

        <TextView
            android:id="@+id/item_list_order_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/simplon_bp_bold"
            android:text="R$3650,00"
            android:textColor="#00AB0F"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>