<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.ui.main.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_home_profile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="16dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/fragment_home_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/avatar_2_raster"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="#465367"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:id="@+id/fragment_home_avatar_image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/avatar_2_raster" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/fragment_home_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/simplon_bp_regular"
                    android:text="Bem-vindo de volta"
                    android:textColor="@color/grey_100"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/fragment_home_avatar"
                    app:layout_constraintTop_toTopOf="@+id/fragment_home_avatar" />

                <TextView
                    android:id="@+id/fragment_home_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/simplon_bp_medium"
                    android:textColor="@color/grey_100"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_home_avatar"
                    app:layout_constraintEnd_toEndOf="@+id/fragment_home_title"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@+id/fragment_home_title"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_home_title"
                    tools:text="61 99922-2233" />

                <TextView
                    android:id="@+id/fragment_home_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/simplon_bp_bold"
                    android:padding="4dp"
                    android:text="@string/menu_main_activity_exit"
                    android:textAllCaps="true"
                    android:textColor="@color/black_100"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/fragment_home_avatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <com.faltenreich.skeletonlayout.SkeletonLayout
            android:id="@+id/fragment_home_budget_card_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_home_profile_container"
            app:shimmerDurationInMillis="1000">

            <androidx.cardview.widget.CardView
                android:id="@+id/fragment_home_budget_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                app:cardBackgroundColor="#465367"
                app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fragment_home_budget_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="24dp">

                    <TextView
                        android:id="@+id/fragment_home_budget_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/simplon_bp_regular"
                        android:text="Total de Serviços"
                        android:textColor="#DFE7F4"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/fragment_home_budget_earns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/simplon_bp_bold"
                        android:text="R$ 1.620,00"
                        android:textColor="#FBFBFB"
                        android:textSize="24sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_home_budget_title" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fragment_home_percent_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="#1AD9D9D9"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0dp"
                        app:contentPadding="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/fragment_home_budget_earns">

                        <TextView
                            android:id="@+id/fragment_home_percent_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/simplon_bp_bold"
                            android:paddingHorizontal="8dp"
                            android:text="+ 15%"
                            android:textColor="#70E5CF"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </com.faltenreich.skeletonlayout.SkeletonLayout>


        <TextView
            android:id="@+id/fragment_home_order_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/simplon_bp_bold"
            android:text="SERVIÇOS DO MÊS"
            android:textAllCaps="true"
            android:textColor="#3E3E3E"
            android:layout_marginHorizontal="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_home_budget_card_skeleton" />

        <com.faltenreich.skeletonlayout.SkeletonLayout
            android:id="@+id/fragment_home_order_skeleton_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_home_order_section"
            app:shimmerDurationInMillis="500">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_home_order_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:paddingBottom="100dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_list_order" />

        </com.faltenreich.skeletonlayout.SkeletonLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>