<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruckHospital" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/black_300</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="Theme.TruckHospital.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/accent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/simplon_bp_bold</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/selector_primary_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:width">170dp</item>
        <item name="android:height">52dp</item>
        <item name="android:fontFamily">@font/simplon_bp_bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/simplon_bp_bold</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.MediumComponent</item>
        <item name="android:backgroundTint">@color/on_primary</item>
        <item name="android:width">170dp</item>
        <item name="android:height">52dp</item>
        <item name="android:fontFamily">@font/simplon_bp_bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextInput" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/grey_300</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/simplon_bp_regular</item>
        <item name="fontFamily">@font/simplon_bp_regular</item>
    </style>

    <style name="SMSEditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/simplon_bp_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black_300</item>
        <item name="titleTextColor">@color/white_100</item>
        <item name="subtitleTextColor">@color/white_300</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/ToolbarSubTitleAppearance</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="ToolbarSubTitleAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VerticalProgressBar">
    </style>
    <style name="VerticalProgressBar.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="VerticalProgressBar.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_list_vertical_progress_colors</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
    </style>
</resources>